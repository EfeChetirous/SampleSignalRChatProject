@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Reference the auto-generated proxy for the hub.
    Create a function that the hub can call back to display messages.*@
<script src="/signalr/js"></script>

<h2>Chat By Signalr</h2>

<div class="container">
    <div class="row">
        <div class="form-group col-md-6">
            <label for="input1">Sender Content </label> - <label id="lblDisplayName"></label>
            @Html.TextArea("SenderContent", new {@class = "form-control"})
            <span class="label label-primary" id="txtTyping"></span>
            <div class="clearfix"></div>
            <br/>
        </div>
        <div class="form-group col-md-4 bottom-left">
            <br/><br/>
            <input type="button" value="Send" id="btnSend" class="btn btn-primary bottom-left"/>
            <div class="clearfix"></div>
            <br/>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-default col-md-10">
            <div class="panel-body" id="ChatContent">
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<br />
<input type="hidden" id="displayname" />

<script src="@Url.Content("~/Scripts/appJs/chat.js")" type="text/javascript"></script>
